<?page title="SGDU - Login" contentType="text/html;charset=UTF-8"?>
<zk xmlns:h="http://www.w3.org/1999/xhtml">
<window border="none" id="winLogin" use="br.ufma.sgdu.window.LoginWindow">
<div align="center">
	<separator height="50px"/>
	<groupbox width="500px" height="390px" id="groupbox">
		<div width="300px">
		<h:a href="index.zul" style="color:black; text-decoration:none">
			<label value="Portal de Normas e Legislações" style="font-size:23px; font-weight: bold; font-style:italic; align: center; text-shadow:4px 4px 3px #c9a859"/>
		</h:a>
		</div>
		<div height="10px"/>
		<vbox align="center">
			<h:a href="http://www.ufma.br">
				<image src="images/logoufma.png" width="125px" height="125px"/>
			</h:a>
			<div width="300px" align="center">
				<label value="Administrador" style="font-size:18px; color:gray; font-weight: bold; font-style:italic" />
			</div>
		</vbox>
		<separator height="25px"/>
		<vbox align="center">
			<hbox>
				<space width="2px"/>
				<label value="Login:" style="color:gray; font-size: 12px"/>
				<textbox style="font-size: 12px" id="textboxUsername"/>
			</hbox>
			<hbox>
				<label value="Senha:" style="color:gray; font-size: 12px"/>
				<textbox type="password" style="font-size: 12px" id="textboxPassword"/>
			</hbox>
			<div height="2px"/>
				<div align="center">
					<button label="Entrar" width="75px" style="font-size:14px" onClick="winLogin.realizarLogin()"/>
				</div>
		</vbox>
		<separator height="5px"/>
		<label value="" style="font-size:12px; font-weight: bold; color:red" id="statusLabel"/>
		<separator height="20px"/>
		<vbox align="center">
			<label value="Universidade Federal do Maranhão" style="font-size:10px; font-weight: bold"/>
			<label value="Developers: Bruno Froz, Julio Filho" style="font-size:10px; font-style:italic"/>
		</vbox>
	</groupbox>
</div>
</window>
</zk>