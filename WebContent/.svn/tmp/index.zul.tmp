<?page title="Portal de Normas e Legislação - UFMA"?>
<window border="none" id="winPesquisa" use="br.ufma.sgdu.window.MainSearchWindow">

<zk xmlns:h="http://www.w3.org/1999/xhtml">

<div align="center">
<separator height="50px"/>
<groupbox width="500px" height="380px">
	<vbox align="center" width="400px">
		<label value="Portal de Normas e Legislações" style="font-size:26px; font-weight: bold; font-style:italic; text-shadow:5px 5px 4px #c9a859"/>
	</vbox>
	<separator height="15px"/>
	<vbox>
		<div align="center">
			<h:a href="http://www.ufma.br" width="150px" height="150px">
				<image src="images/logoufma.png" width="150px" height="150px"/>
			</h:a>
		</div>
		<separator height="10px"/>
		<textbox width="430px" style="font-size:14px" id="textboxBusca"/>
		<div align="left">
			<label value="Tipo de busca:"/>
			<checkbox label="Por Título" checked="true" id="checkboxBuscaTitulo"/>
			<checkbox label="Por Descrição" checked="true" id="checkboxBuscaDescricao"/>
			<checkbox label="Por Conteúdo" checked="false" id="checkboxBuscaConteudo"/>
			<space width="25px"/>
			<image src="images/ajuda.gif" width="20px" height="20px" onClick="winPesquisa.showHelp()"/>
		</div>
		<div align="center">
			<button label="Pesquisar Documento" width="100px" height="28px" style="font-size: 14px" onClick="winPesquisa.searchDocument()"/>
		</div>
	</vbox>
	<vbox align="center">
			<separator height="15px"/>
			<label value="Universidade Federal do Maranhão" style="font-size:10px; font-weight: bold"/>
			<label value="Developers: Bruno Froz, Julio Filho" style="font-size:10px; font-style:italic"/>
	</vbox>
</groupbox>
</div>
</zk>
</window>